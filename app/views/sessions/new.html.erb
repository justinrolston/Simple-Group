<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "error_explanation" %>
<% end %>
<%= form_tag sessions_path do %> 
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
    </div> <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
    </div> <div class="field">
    <%= submit_tag 'Login' %>
  </div>
<% end %>
