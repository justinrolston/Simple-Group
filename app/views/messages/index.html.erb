<h1>Listing messages</h1>

<table>
  <tr>
    <th>From</th>
    <th>Subject</th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.user.name %></td>
    <td><%= message.subject %></td>
    <td><%= pill_button_link_to 'Show', message %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_link_to 'New Message', new_message_path %>
