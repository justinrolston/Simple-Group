<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <%= button_group do %>
        <%= pill_button_link_to 'Edit', edit_user_path(user) %>
      <%= negative_pill_button_link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
</td>
  </tr>
<% end %>
</table>

<br />

<%= button_link_to 'New User', new_user_path %>
